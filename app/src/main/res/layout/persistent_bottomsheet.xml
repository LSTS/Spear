<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomsheet"
    android:layout_width="match_parent"
    android:layout_height="253dp"
    android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
    android:orientation="vertical"
    android:paddingBottom="@dimen/inbetween_space"
    app:behavior_hideable="false"
    app:behavior_peekHeight="253dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/bs_item_height"
        android:id="@+id/layout"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/servicebar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#a9a9a9"
            android:clickable="true"
            android:onClick="onClick"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="35dp"
            android:layout_height="35dp"

            android:background="@drawable/wifi"
            android:layout_alignLeft="@+id/imageView2"
            android:layout_alignStart="@+id/imageView2"
            android:layout_alignBottom="@+id/servicebar" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="31dp"
            android:layout_marginRight="31dp"
            android:background="@drawable/nowifi"
            android:fitsSystemWindows="true"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/teleop"
            android:layout_width="110dp"
            android:layout_height="55dp"
            android:background="@drawable/teleopbutton"
            android:onClick="Teleop"
            android:text="@string/teleop"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:layout_alignTop="@+id/accelerate"
            android:layout_alignRight="@+id/accelerate"
            android:layout_alignEnd="@+id/accelerate" />

        <Button
            android:id="@+id/near"
            android:layout_width="110dp"
            android:layout_height="55dp"
            android:background="@drawable/commandbutton"
            android:onClick="near"
            android:text="@string/near"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:layout_alignTop="@+id/accelerate"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


        <Button
            android:id="@+id/stop"
            android:layout_width="110dp"
            android:layout_height="55dp"
            android:layout_alignLeft="@+id/startplan"
            android:layout_alignStart="@+id/startplan"
            android:layout_alignTop="@+id/textView5"
            android:background="@drawable/stopbutton"
            android:onClick="Stop"
            android:text="@string/stop"
            android:textColor="#ffffff"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/velocity"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_alignBaseline="@+id/startplan"
            android:layout_alignBottom="@+id/startplan"
            android:layout_centerHorizontal="true"
            android:textColor="#8B0000"
            android:textSize="16sp" />


        <Button
            android:id="@+id/dive"
            android:layout_width="110dp"
            android:layout_height="55dp"
            android:layout_alignBaseline="@+id/stop"
            android:layout_alignBottom="@+id/stop"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/commandbutton"
            android:onClick="Dive"
            android:text="@string/dive"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <Button
            android:id="@+id/KeepStation"
            android:layout_width="110dp"
            android:layout_height="55dp"
            android:background="@drawable/commandbutton"
            android:onClick="keepStation"
            android:text="@string/station"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:layout_alignTop="@+id/textView2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


        <Button
            android:id="@+id/startplan"
            android:layout_width="110dp"
            android:layout_height="55dp"
            android:background="@drawable/commandbutton"
            android:onClick="start"
            android:text="@string/startplan"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:layout_alignTop="@+id/textView2"
            android:layout_alignRight="@+id/stopTeleop"
            android:layout_alignEnd="@+id/stopTeleop" />

        <com.example.nachito.spear.StopTeleop xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/stopTeleop"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_alignBottom="@+id/joystick"
            android:layout_alignEnd="@+id/decelerate"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/decelerate"
            android:background="@drawable/stopbutton"
            android:onClick="onClick"
            android:text="@string/stop"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:layout_alignTop="@+id/stopTeleop"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="20dp"
            android:text="Stop"
            android:textColor="#ffffff" />


        <com.example.nachito.spear.Accelerate
            android:id="@+id/accelerate"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"

            android:layout_marginTop="3dp"
            android:background="@drawable/commandbutton"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/accelerate"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/accelerate"
            android:layout_marginEnd="31dp"
            android:layout_marginRight="31dp"
            android:layout_marginTop="16dp"
            android:text="@string/acc"
            android:textColor="#ffffff" />

        <com.example.nachito.spear.Decelerate
            android:id="@+id/decelerate"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/accelerate"
            android:layout_alignStart="@+id/accelerate"
            android:layout_below="@+id/accelerate"
            android:layout_marginTop="5dp"
            android:background="@drawable/commandbutton"
            android:text="decelerate"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:layout_alignTop="@+id/decelerate"
            android:layout_marginTop="14dp"
            android:text="Decelerate"
            android:textColor="#ffffff" />

        <com.example.nachito.spear.Joystick
            android:id="@+id/joystick"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="50dp"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="5dp" />


    </RelativeLayout>

</LinearLayout>


