<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomsheet"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:layout_alignParentBottom="true"
    android:background="#FFFF"
    android:orientation="vertical"
    android:paddingBottom="@dimen/inbetween_space"
    app:behavior_hideable="false"
    app:behavior_peekHeight="230dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">
    <!-- android:background="#00FFFFFF"-->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/bs_item_height"
        android:id="@+id/layout"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/servicebar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#a9a9a9"
            android:clickable="true"
            android:onClick="onClick"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:focusable="true" />


        <ImageView
            android:id="@+id/wifiImage"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/wifi"
            android:layout_alignStart="@+id/noWifiImage"
            android:layout_alignBottom="@+id/servicebar"
            android:contentDescription="@string/wifion" />

        <ImageView
            android:id="@+id/noWifiImage"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="31dp"
            android:background="@drawable/nowifi"
            android:fitsSystemWindows="true"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/wifioff" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/teleOperationButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/teleopbutton"
            android:text="@string/teleop"
            android:textColor="#ffffff"
            android:layout_marginStart="7dp"
            android:textSize="12sp"
            android:layout_alignTop="@+id/accelerate"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/near"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/commandbutton"
            android:text="@string/near"
            android:layout_marginEnd="7dp"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:layout_alignTop="@+id/accelerate"
            android:layout_alignParentEnd="true" />


        <Button
            android:id="@+id/stop"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/stopbutton"
            android:text="@string/stop"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:layout_marginStart="7dp"
            android:layout_alignBaseline="@+id/textView5"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignParentStart="true" />


        <TextView
            android:id="@+id/velocity"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:textColor="#8B0000"
            android:textSize="16sp"
            android:layout_alignBottom="@+id/joystick"
            android:layout_centerHorizontal="true" />


        <Button
            android:id="@+id/dive"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/stop"
            android:layout_alignBottom="@+id/stop"
            android:layout_alignParentEnd="true"
            android:background="@drawable/commandbutton"
            android:text="@string/dive"
            android:layout_marginEnd="7dp"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <Button
            android:id="@+id/keepStation"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/commandbutton"
            android:text="@string/station"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:layout_marginEnd="7dp"
            android:layout_alignBaseline="@+id/startplan"
            android:layout_alignBottom="@+id/startplan"
            android:layout_alignParentEnd="true" />


        <Button
            android:id="@+id/startplan"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/commandbutton"
            android:text="@string/startplan"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:layout_marginStart="7dp"
            android:layout_alignTop="@+id/decelerate"
            android:layout_alignParentStart="true" />

        <com.example.nachito.spear.StopTeleop
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/stopTeleop"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/stopbutton"
            android:text="@string/stop"
            android:textColor="#ffffff"
            android:layout_marginStart="7dp"
            android:layout_below="@+id/decelerate"
            android:layout_marginTop="5dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stop"
            android:textColor="#ffffff"
            android:layout_alignTop="@+id/stopTeleop"
            android:layout_alignStart="@+id/textView2"
            android:layout_marginStart="13dp"
            android:layout_marginTop="16dp" />


        <com.example.nachito.spear.Accelerate
            android:id="@+id/accelerate"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_marginStart="7dp"
            android:background="@drawable/commandbutton"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/acc"
            android:textColor="#ffffff"
            android:layout_above="@+id/decelerate"
            android:layout_alignStart="@+id/textView2"
            android:layout_marginBottom="16dp" />

        <com.example.nachito.spear.Decelerate
            android:id="@+id/decelerate"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@+id/accelerate"
            android:layout_marginTop="5dp"
            android:background="@drawable/commandbutton"
            android:text="@string/decelerate"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:layout_alignStart="@+id/startplan" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/decelerate"
            android:textColor="#ffffff"
            android:layout_alignTop="@+id/decelerate"
            android:layout_alignEnd="@+id/decelerate"
            android:layout_marginEnd="12dp" />

        <com.example.nachito.spear.Joystick
            android:id="@+id/joystick"
            android:layout_width="400dp"
            android:layout_height="450dp"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>

</LinearLayout>


